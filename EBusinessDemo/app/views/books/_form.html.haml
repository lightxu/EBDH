= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :publisher
    = f.text_field :publisher
  .field
    = f.label :publish_date
    = f.date_select :publish_date
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :amazon_link
    = f.text_field :amazon_link
  .actions
    = f.submit 'Save'
