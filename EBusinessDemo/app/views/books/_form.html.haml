= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, :class => "form-control"
  .form-group
    = f.label :author
    = f.text_field :author, :class => "form-control"
  .form-group
    = f.label :publisher
    = f.text_field :publisher, :class => "form-control"
  .form-group
    = f.label :publish_date
    = f.date_select :publish_date, :class => "form-control"
  .form-group
    = f.label :price
    = f.text_field :price, :class => "form-control"
  .form-group
    = f.label :amazon_link
    = f.text_field :amazon_link, :class => "form-control"
  .actions
    = f.submit 'Save', :class => "btn btn-default"
